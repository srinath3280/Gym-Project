<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <style>
            body{
                background-color: rgb(134, 238, 212);
            }
            .head ul{
                margin-left: auto;
                margin-right: 200px;
            }
            .head ul li a{
                color: black;
                font-size: 20px;
            }
            .img{
                margin-left: 100px;
            }
            .nav-link:hover{
                color: white;
                border-bottom: 2px solid yellow;
            }
            tr th{
                border: 1px solid black;
            }
            tr td{
                border: 1px solid black;
            }
        </style>
    </head>
    <body>
        <div style="position: sticky;top: 0;background-color: slategrey;">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="head collapse navbar-collapse" id="navbarTogglerDemo01">
                  <a class="img navbar-brand" href="">
                    <img src="https://static.vecteezy.com/system/resources/thumbnails/017/504/043/small/bodybuilding-emblem-and-gym-logo-design-template-vector.jpg" alt="" width="50px" height="50px">
                  </a>
                  <h4>Hello..! <%= username %></h4>
                  <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                      <a class="nav-link" href="/workout">Workout</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/report">Report</a>
                      </li>
                    <li class="nav-item active">
                      <a class="nav-link" href="/">Logout</a>
                    </li>
                  </ul>
                </div>
            </nav>
        </div>
        <div style="margin-top: 30px;">
            <h2 style="text-align: center;">Report Data</h2>
            <div style="border: 1px solid lightslategrey;width: 750px; margin-left: auto;margin-right: auto;margin-bottom: 10px;"></div>
            <table cellpadding="15px" style="margin-left: auto;margin-right: auto;text-align: center;">
                <thead class="table-danger">
                    <tr>
                        <th>S.No</th>
                        <th>Date</th>
                        <th>Day</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    <% allreportdetails.forEach((data,index) => { %>
                        <% if(data.User === username){ %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><%= data.Date %></td>
                                <td><%= data.Day %></td>
                                <td><%= data.Category[0] %></td>
                            </tr>
                        <% } %>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </body>
</html>