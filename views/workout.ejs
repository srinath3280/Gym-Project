<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <style>
            .head ul{
                margin-left: auto;
                margin-right: 200px;
            }
            .head ul li a{
                color: black;
                font-size: 20px;
            }
            .img{
                margin-left: 100px;
            }
            .nav-link:hover{
                color: white;
                border-bottom: 2px solid yellow;
            }
            .btn-primary:hover{
                background-color: white;
                color: black;
                font-weight: bold;
            }
        </style>
    </head>
    <body>
        <div>
            <nav class="navbar navbar-expand-lg navbar-light bg-danger">
                <div class="head collapse navbar-collapse" id="navbarTogglerDemo01">
                  <a class="img navbar-brand" href="">
                    <img src="https://static.vecteezy.com/system/resources/thumbnails/017/504/043/small/bodybuilding-emblem-and-gym-logo-design-template-vector.jpg" alt="" width="50px" height="50px">
                  </a>
                  <h4>Hello..! <%= username %></h4>
                  <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                      <a class="nav-link" href="/workout">Workout</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/report">Report</a>
                      </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/login">Logout</a>
                    </li>
                  </ul>
                </div>
            </nav>
        </div>
        <div>
            <h1>Workouts</h1>
            <div class="row row-cols-1 row-cols-md-4 g-2" style="margin: 25px;">
                <% alldeatils.forEach((details)=>{ %>
                    <div class="col">
                        <div class="card">
                            <img src="<%= details.image %>" class="card-img-top" alt="..." height="250px">
                            <div class="card-body">
                                <a href="/workoutdata/<%= details.Day %>" class="btn btn-primary"><%= details.Day %></a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </body>
</html>